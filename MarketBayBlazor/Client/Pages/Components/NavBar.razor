@code {

    private string _valueFilter = string.Empty;

    [Parameter]
    public string FilterParam {
        get => _valueFilter;
        set 
        {
            if(_valueFilter == value) return;
            _valueFilter = value;
            FilterParamChanged.InvokeAsync(value);
        }
    }

    [Parameter]
    public EventCallback<string> FilterParamChanged {get; set;}

}
